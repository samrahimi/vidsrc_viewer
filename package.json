{
    "name": "vidsrc-viewer",
    "version": "1.0.0",
    "description": "A popup-free viewer for vidsrc.xyz",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "package": "electron-packager . Vidsrc --platform=darwin --arch=x64 --overwrite --protocol=vidsrc --protocol-name=\"Vidsrc\" --out=dist --icon=icon.icns",
        "build-dmg": "npm run package && ./create_dmg.sh",
        "build:android": "npx cap sync android",
        "open:android": "npx cap open android"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "create-dmg": "^6.0.0",
        "electron": "^33.2.0",
        "electron-packager": "^17.1.2"
    },
    "build": {
        "protocols": [
            {
                "name": "Vidsrc",
                "schemes": [
                    "vidsrc"
                ]
            }
        ]
    },
    "dependencies": {
        "@capacitor/android": "^7.4.4",
        "@capacitor/cli": "^7.4.4",
        "@capacitor/core": "^7.4.4"
    }
}