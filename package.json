{
    "name": "vidsrc-viewer",
    "version": "1.0.0",
    "description": "A popup-free viewer for vidsrc.xyz",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "package": "electron-packager . VidsrcViewer --platform=darwin --arch=x64 --overwrite --protocol=vidsrc --protocol-name=\"Vidsrc Viewer\" --out=dist --icon=icon.icns",
        "build-dmg": "npm run package && ./create_dmg.sh"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "electron": "^33.2.0",
        "electron-packager": "^17.1.2",
        "create-dmg": "^6.0.0"
    },
    "build": {
        "protocols": [
            {
                "name": "Vidsrc Viewer",
                "schemes": [
                    "vidsrc"
                ]
            }
        ]
    }
}